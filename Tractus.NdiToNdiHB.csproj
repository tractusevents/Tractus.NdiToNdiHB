<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	  <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	  <ApplicationIcon>HXtoHB.ico</ApplicationIcon>
	  <Title>Tractus HX to HB Converter for NDI</Title>
	  <AssemblyVersion>2024.8.21.1</AssemblyVersion>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="HXtoHB.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NDILibDotNetCoreBase" Version="2024.7.22.1" />
  </ItemGroup>

  <ItemGroup>
    <None Update="HXtoHB.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="HXtoHB.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
